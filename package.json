{
  "name": "typescript-mocha-boilerplate",
  "version": "1.0.0",
  "description": "A little boilerplate to get a quick typescript tdd setting up and running.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "test": "node_modules/.bin/mocha --opts ./mocha.opts"
  },
  "keywords": [
    "mocha",
    "typescript",
    "tdd"
  ],
  "author": "brugos",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mocha": "^4.0.1",
    "sinon": "^4.1.1",
    "sinon-chai": "^2.14.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/mocha": "^2.2.44",
    "@types/node": "^16.0.0",
    "@types/sinon": "^2.3.7",
    "@types/sinon-chai": "^2.7.29",
    "chai-http": "^4.3.0"
  }
}
